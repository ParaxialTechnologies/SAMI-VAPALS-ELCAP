#!/bin/sh

ENV="/usr/bin/env"

MV="$ENV mv"
RM="$ENV rm"

REPO="$HOME/lib/silver/a-sami-vapals-elcap--vo-osehra-github"

echo "This will isolate your static copy of the VAPALS-ELCAP Git repository."
read -p "Are you sure [yes/no/rename] ? " ANSWER

case "$ANSWER" in
    y* | Y* )
        printf "Removing .git directory from static copy ... "
        $RM -rf $REPO/.git
        echo "done."
        ;;
    r* | R* )
        printf "Renaming .git directory to .gitstatic ... "
        $MV $REPO/.git $REPO/.gitstatic
        echo "done."
        ;;
esac

