#!/bin/sh

ENV="/usr/bin/env"

CP="$ENV cp"
GIT="$ENV git"
MKDIR="$ENV mkdir"
RM="$ENV rm"

REPO="$HOME/lib/silver/a-sami-vapals-elcap--vo-osehra-github"
INDIR="$HOME/run/in/sami/18.13/t1"

if [ -d "$REPO/.git" ]; then
   echo "Found a Git repository; pulling updates."
   cd $REPO
   $GIT pull
   echo "Done."
else
   printf "Updating files ..."
   for I in www; do
       $RM -rf $REPO/docs/$I
       $CP -r $INDIR/$I $REPO/docs
   echo "done."
fi

