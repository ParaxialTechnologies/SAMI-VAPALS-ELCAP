                    <div class="col-sm-6 col-md-3 col-lg-2">
                        <div class="form-group">
                            {{ f.inlineRadio("sbahpft","sbahpft-n","n", "No") }}
                            {{ f.inlineRadio("sbahpft","sbahpft-y","y", "Yes") }}
                        </div>
