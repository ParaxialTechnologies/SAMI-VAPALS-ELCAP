            function zipLookup(updateSelection) {
                const zipcode = $zipField.val();
                const $ruralText = $("#rural-text");
                $.ajax(("/zipru/" + zipcode), {dataType: "json"})
                    .done(function (json) {
                        const ruralData = json.result;
